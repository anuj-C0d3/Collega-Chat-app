<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer: A slightly larger, blurred, semi-transparent shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#20000000" /> <!-- 12.5% black for a soft shadow -->
            <corners android:radius="15dp" />
        </shape>
    </item>

    <!-- Foreground Layer: The actual button -->
    <item android:bottom="5dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <gradient
                android:angle="45"
                android:startColor="#6A82FB"
                android:endColor="#435DEB"
                android:type="linear" />
            <stroke android:width="1dp" android:color="#3A53D8" />
        </shape>
    </item>
</layer-list>