<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbg"
    tools:context=".SplashScreen">

    <ImageView
        android:id="@+id/splashlogoimg"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/splashnametext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/akronim"
        android:text="SLAYDGE"
        android:textColor="#BCBCBC"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="@+id/splashlogoimg"
        app:layout_constraintEnd_toEndOf="@+id/splashlogoimg"
        app:layout_constraintStart_toStartOf="@+id/splashlogoimg"
        app:layout_constraintTop_toBottomOf="@+id/splashlogoimg" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/splashtext" />
</androidx.constraintlayout.widget.ConstraintLayout>